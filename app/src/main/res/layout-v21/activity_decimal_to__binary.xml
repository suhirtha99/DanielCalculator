<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/actionModeSplitBackground"
    android:minHeight="0dp"
    android:minWidth="0dp"
    tools:context="com.mp7.funny.calculator.Decimal_to_Binary">

    <RelativeLayout
        android:id="@+id/Calculator"
        android:layout_width="395dp"
        android:layout_height="587dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button0"
            android:layout_toStartOf="@+id/button0"
            android:background="@android:color/background_light"
            android:text="@string/_1"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/decimalText"
            android:layout_alignTop="@+id/clear"
            android:background="@android:color/background_light"
            android:outlineProvider="bounds"
            android:text="@string/_0"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <TextView
            android:id="@+id/displayBinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/decimalText"
            android:layout_marginTop="14dp"
            android:background="@color/Pink_Transparent"
            android:labelFor="@+id/binaryText"
            android:textAlignment="center"
            android:textSize="36sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_toEndOf="@+id/decimalText"
            android:background="@android:color/black"
            android:text="@string/clear"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/displayDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/binaryText"
            android:layout_marginTop="43dp"
            android:background="@color/Pink_Transparent"
            android:labelFor="@+id/decimalText"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/binaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayBinary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:text="@string/binary"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/decimalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="@string/decimal"
            android:textColor="@android:color/holo_green_light"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/displayBinary"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/it_s_a_button"
            app:srcCompat="@drawable/arrows" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button0"
            android:layout_alignTop="@+id/button1"
            android:background="@android:color/background_light"
            android:text="@string/_2"
            android:textColor="@android:color/black"

            android:textSize="36sp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button2"
            android:layout_alignBottom="@+id/button2"
            android:layout_toEndOf="@+id/button2"
            android:background="@android:color/background_light"
            android:text="@string/_3"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button5"
            android:layout_toStartOf="@+id/button2"
            android:background="@android:color/background_light"
            android:text="@string/_4"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button1"
            android:layout_toStartOf="@+id/button3"
            android:background="@android:color/background_light"
            android:text="@string/_5"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:background="@android:color/background_light"
            android:text="@string/_6"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:background="@android:color/background_light"
            android:text="@string/_7"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button7"
            android:layout_alignBottom="@+id/button7"
            android:layout_toEndOf="@+id/button4"
            android:background="@android:color/background_light"
            android:text="@string/_8"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button8"
            android:layout_alignBottom="@+id/button8"
            android:layout_toEndOf="@+id/button5"
            android:background="@android:color/background_light"
            android:text="@string/_9"
            android:textColor="@android:color/black"

            android:textSize="36sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
